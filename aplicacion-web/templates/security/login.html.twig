{% extends 'base.html.twig' %}

{% block title %}Iniciar sesión{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    .error {color: #FF0000;}
</style>

<div class="example-wrapper">    
    <h1 class="d-flex justify-content-center">Iniciar sesión</h1>            

    {% if error %}
        <span class="error"> {{ error.messageKey }}</span>
    {% endif %}             
    <form action="{{ path('login')}}" method="POST">
        <div class="form-group">
            <label for:"_username">Nombre de usuario:</label>    
            <input type="text" class="form-control" name="_username" value="{{ username }}" placeholder="Nombre de usuario">                    
        </div>
        <div class="form-group">
            <label for:"_password">Contraseña:</label>
            <input type="password" class="form-control" name="_password" placeholder="Contraseña">            
        </div>
        <div class="d-flex justify-content-center">
            <button class="btn-lg btn-primary" type="submit">Iniciar sesión</button>
        </div>
    </form>
</div>
{% endblock %}
